<%= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Creditcards' } %>

<% content_for :page_title do %>
  <i class="icon-arrow-right"></i> <%= Spree.t(:refund) %>
<% end %>

<%= form_tag do %>
  <h3><%= Spree.t(:refund) %></h3>
  <fieldset data-hook="credit">
    <p>
      <%= label_tag :amount, Spree.t(:amount) %>
      <%= text_field_tag :amount, @payment.amount %>
    </p>
    <p class="form-buttons">
      <%= button Spree.t(:make_refund) %>
    </p>
  </fieldset>
<% end %>
